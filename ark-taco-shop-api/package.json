{
    "name": "@mlh/ark-taco-shop-api",
    "version": "0.0.1",
    "private": true,
    "description": "Provides an API for taco orders on the Ark Core",
    "license": "MIT",
    "contributors": [
        "Halisson Bruno <halissonvit@gmail.com>"
    ],
    "files": [
        "dist"
    ],
    "main": "dist/index",
    "types": "dist/index",
    "scripts": {
        "build": "yarn clean && yarn build:prepare && yarn compile && yarn build:assets",
        "build:assets": "cp -rf ./src/server/public ./dist/server/",
        "build:prepare": "mkdir dist",
        "build:watch": "yarn clean && yarn build && yarn compile -w",
        "clean": "del dist",
        "compile": "tsc",
        "format": "tslint -c ./tslint.json 'src/**/*.ts' --fix && prettier --write \"./*.{ts,js,json,md}\" \"./src/**/*.{ts,js,json,md}\""
    },
    "dependencies": {
        "@arkecosystem/core-container": "^2.3.0",
        "@arkecosystem/core-http-utils": "^2.3.0",
        "@arkecosystem/core-interfaces": "^2.3.0",
        "@hapi/boom": "^7.3.0",
        "@hapi/h2o2": "^8.1.2",
        "@hapi/hapi": "^18.1.0",
        "@hapi/inert": "^5.1.3",
        "@hapi/joi": "^14.3.1",
        "@hapi/wreck": "^15.0.1",
        "axios": "^0.18.0",
        "fs-extra": "^7.0.1",
        "hapi-pagination": "^2.1.0",
        "lowdb": "^1.0.0",
        "micromatch": "^3.1.10",
        "request-ip": "^2.1.3",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "@sindresorhus/tsconfig": "^0.3.0",
        "@types/fs-extra": "^5.1.0",
        "@types/hapi__boom": "^7.4.0",
        "@types/hapi__h2o2": "^8.3.0",
        "@types/hapi__hapi": "^18.2.1",
        "@types/hapi__inert": "^5.2.0",
        "@types/hapi__joi": "^15.0.1",
        "@types/hapi__wreck": "^15.0.0",
        "@types/micromatch": "^3.1.0",
        "@types/node": "^11.13.0",
        "@types/prettier": "^1.16.3",
        "@types/request-ip": "^0.0.33",
        "@types/uuid": "^3.4.4",
        "cross-env": "^5.2.0",
        "jest": "^24.7.0",
        "jest-extended": "^0.11.1",
        "prettier": "^1.16.4",
        "tslint": "^5.15.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.4.1"
    }
}
